<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FlyoutPages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlyoutPages"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Title="FlyoutPages">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="BMI Calculator"
            ContentTemplate="{DataTemplate local:BMICalculator}"
            Route="BMICalculator" />

        <ShellContent
            Title="Morse Tapper"
            ContentTemplate="{DataTemplate local:MorseTap}"
            Route="MorseTap" />

        <ShellContent
            Title="Alcohol Helper"
            ContentTemplate="{DataTemplate local:AlcoholHelper}"
            Route="AlcoholHelper" />
    </FlyoutItem>
</Shell>
